<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:layout_margin="2dp"
        app:cardCornerRadius="10dp"
        android:elevation="5dp"
        android:id="@+id/NewsCardView">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#E4ECEC">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/NewsHeading"
                android:padding="5dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/black"
                android:text=""
                android:textSize="20sp"
                android:textStyle="bold">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="6"
                    android:padding="5dp"
                    android:id="@+id/NewsContent"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:text="">


                </TextView>


                <ImageView
                    android:id="@+id/NewsImageView"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:padding="5dp">

                </ImageView>


                <RelativeLayout
                    android:layout_width="90dp"
                    android:layout_height="130dp">


                    <ImageButton
                        android:id="@+id/UpVote"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="8dp"
                        android:backgroundTint="#86BC99"
                        android:src="@drawable/ic_baseline_arrow_upward_24" />

                    <ImageButton
                        android:id="@+id/DownVote"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_below="@id/UpVote"
                        android:layout_marginTop="0dp"
                        android:backgroundTint="@color/down_vote_color"
                        android:src="@drawable/ic_baseline_arrow_downward_24" />

                    <ImageButton
                        android:id="@+id/CommentButton"
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:layout_below="@id/DownVote"
                        android:layout_marginTop="0dp"
                        android:backgroundTint="#8DDBFF"
                        android:src="@drawable/ic_baseline_chat_bubble_24" />

                    <TextView
                        android:id="@+id/upVoteCounter"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="11dp"
                        android:layout_toEndOf="@id/UpVote"
                        android:text="0"
                        android:textAlignment="center"
                        android:textColor="#86BC99"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/downVoteCounter"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_below="@id/upVoteCounter"
                        android:layout_marginTop="4dp"
                        android:layout_toEndOf="@id/DownVote"
                        android:text="0"
                        android:textAlignment="center"
                        android:textColor="#FF8D8D"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </RelativeLayout>


            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="13sp"
                android:textStyle="italic"
                android:textColor="#2a363b"
                android:padding="5dp"
                android:id="@+id/NewsAuthor">


            </TextView>

            <!---<TextView
                android:id="@+id/NewsPublished"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="10sp"

                android:textStyle="bold">

            </TextView>-->


        </LinearLayout>



    </androidx.cardview.widget.CardView>

</RelativeLayout>